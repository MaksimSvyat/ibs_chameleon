<?xml version="1.0" encoding="UTF-8"?>
<Pages xmlns="http://chameleon.ibs-qa.ru/schema/web-elements">
    <Page name="Меню">
        <Link name="Песочница" locator="//a[@href='#']"/>
        <Link name="Товары" locator="//a[@href='/food']" isLoaded="true"/>
        <Link name="Сброс данных" locator="//a[@id='reset']" isLoaded="true"/>
    </Page>
    <Page name="Главная страница">
        <Block name="Меню"/>
    </Page>
    <Page name="Список товаров">
        <Block name="Меню"/>
        <Button name="Добавить" locator="//button[text()='Добавить']"/>
        <Collection name="Таблица" locator="//table/tbody/tr" waitTimeOut="10">
            <StaticText name="#" locator=".//th"/>
            <StaticText name="Наименование" locator=".//td[1]"/>
            <StaticText name="Тип" locator=".//td[2]"/>
            <StaticText name="Экзотический" locator=".//td[3]"/>
        </Collection>
    </Page>
    <Page name="Добавление товара">
        <TextInput name="Наименование" locator="//input[@id='name']" waitTimeOut="20" isLoaded="true"/>
        <ComboBox name="Тип" locator="//select[@id='type']"/>
        <CheckBox name="Экзотический" locator="//input[@id='exotic']"/>
        <Button name="Сохранить" locator="//button[@id='save']" isLoaded="true"/>
        <StaticText name="Заголовок" locator='//h5[text()="Добавление товара"]' isLoaded="true"/>
    </Page>
</Pages>