<?xml version="1.0" encoding="UTF-8"?>
<DbGears xmlns="http://chameleon.ibs-qa.ru/schema/db">
    <Connection name="H2" driver="org.h2.Driver" url="jdbc:h2:tcp://localhost:9092/mem:testdb;user=#{user};password=#{password}" autoCommit="true">
        <Params>
            <FieldString name="Пользователь" locator="user"/>
            <FieldString name="Пароль" locator="password"/>
        </Params>
    </Connection>
    <Query name="Проверка наличия товара в базе данных" statement="SELECT FOOD_TYPE, FOOD_EXOTIC FROM food WHERE FOOD_NAME = :name">
        <Params>
            <FieldString name="Наименование" locator="name"/>
        </Params>
        <Result>
            <FieldString name="Тип_товара" locator="FOOD_TYPE"/>
            <FieldBoolean name="Экзотический_вид" locator="FOOD_EXOTIC"/>
        </Result>
    </Query>
    <Query name="Удаление товара из базы данных" statement="DELETE FROM food WHERE FOOD_NAME = :name">
        <Params>
            <FieldString name="Наименование" locator="name"/>
        </Params>
    </Query>
</DbGears>
